ALTER TABLE `device_manage` ADD `dema_classify` VARCHAR( 50 ) CHARACTER SET utf8 COLLATE utf8_general_ci NOT NULL DEFAULT '' COMMENT 'Classify', ADD `dema_version` INT( 10 ) UNSIGNED NOT NULL DEFAULT '1' COMMENT '版次', ADD `dema_move_in` INT( 10 ) UNSIGNED NOT NULL DEFAULT '0' COMMENT 'Move in', ADD `dema_turn_on` INT( 10 ) UNSIGNED NOT NULL DEFAULT '0' COMMENT 'Turn on', ADD `dema_remark` VARCHAR( 300 ) CHARACTER SET utf8 COLLATE utf8_general_ci NOT NULL DEFAULT '' COMMENT 'Remark', ADD `dema_editor` INT( 10 ) UNSIGNED NOT NULL DEFAULT '0' COMMENT '編輯者 js_user.jsuser_sn';
ALTER TABLE `device_manage` CHANGE `jsuser_sn` `jsuser_sn` INT( 10 ) UNSIGNED NOT NULL DEFAULT '0' COMMENT '承攬商 js_user.jsuser_sn';
UPDATE `device_manage` SET `dema_editor` = '1';
CREATE TABLE IF NOT EXISTS `device_manage_log` (   `demal_sn` int(10) unsigned NOT NULL AUTO_INCREMENT,   `dema_sn` int(10) unsigned NOT NULL COMMENT 'device_manage.dema_sn',   `dema_device_name` varchar(64) NOT NULL DEFAULT '' COMMENT '機台名稱',   `dema_device_project` varchar(64) NOT NULL DEFAULT '' COMMENT '專案名稱',   `dema_classify` varchar(50) NOT NULL DEFAULT '' COMMENT 'Classify',   `dema_site` tinyint(3) NOT NULL DEFAULT '1' COMMENT ' 1:A廠 , 2:B廠 , 3:C廠',   `dema_floor` tinyint(3) NOT NULL DEFAULT '1' COMMENT '1:1F , 2:2F , 3:3F',  `dema_device_location` varchar(64) NOT NULL DEFAULT '' COMMENT '位置',   `dema_supplier` int(10) unsigned NOT NULL DEFAULT '0' COMMENT '承攬商 js_user.jsuser_sn',   `dema_move_in` int(10) unsigned NOT NULL DEFAULT '0' COMMENT 'Move in',   `dema_turn_on` int(10) unsigned NOT NULL DEFAULT '0' COMMENT 'Turn on',   `dema_system` varchar(256) NOT NULL COMMENT '系統別, 多個時用逗號格開',   `dema_remark` varchar(300) NOT NULL DEFAULT '' COMMENT 'Remark',   `dema_version` int(10) unsigned NOT NULL DEFAULT '1' COMMENT '版次',   `dema_confirm_version` tinyint(3) NOT NULL DEFAULT '0' COMMENT '定版紀錄 1:是 0:否',   `dema_date` int(10) unsigned NOT NULL DEFAULT '0' COMMENT '時間',   `dema_editor` int(10) unsigned NOT NULL DEFAULT '0' COMMENT '編輯者 js_user.jsuser_sn',   PRIMARY KEY (`demal_sn`) ) ENGINE=InnoDB  DEFAULT CHARSET=utf8 COMMENT='設備修改紀錄';
INSERT INTO device_manage_log (dema_sn, dema_device_name, dema_device_project, dema_classify, dema_site, dema_floor, dema_device_location, dema_supplier, dema_move_in, dema_turn_on, dema_system, dema_remark, dema_version, dema_confirm_version, dema_date, dema_editor 	) SELECT dema_sn, dema_device_name, dema_device_project, dema_classify, dema_site, dema_floor, dema_device_location, jsuser_sn, dema_move_in, dema_turn_on, dema_system, dema_remark, dema_version, '1', dema_add_date, jsuser_sn FROM device_manage WHERE dema_status=1;
